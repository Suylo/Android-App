<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TP2_Activity.IntentActivityOne">

    <TextView
            android:text="La question :"
            android:layout_width="329dp"
            android:layout_height="110dp" android:id="@+id/question_title"
            android:textSize="34sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.173"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="cursive" android:textStyle="bold" android:textAlignment="center"/>
    <RadioGroup
            android:layout_width="311dp"
            android:layout_height="203dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question_title" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintVertical_bias="0.262"
            android:id="@+id/radioGroup">
        <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="69dp" android:id="@+id/radioButton" android:textSize="20sp"
                android:textColor="#0277BD"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="62dp" android:id="@+id/radioButton2" android:textSize="20sp"
                android:textColor="#0277BD"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="70dp" android:id="@+id/radioButton3" android:textSize="20sp"
                android:textColor="#0277BD"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>